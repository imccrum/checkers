<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="imccrum.com.checkers">

    <uses-permission android:name="android.permission.INTERNET"/>



    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/AppTheme">

        <activity android:name="imccrum.com.checkers.MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="imccrum.com.checkers.SetupActivity" android:label="@string/title_activity_setup"/>
        <activity android:name="imccrum.com.checkers.GameActivity" android:label="@string/title_activity_game"/>

        <service android:name="imccrum.com.checkers.SocketService"/>

    </application>

</manifest>
